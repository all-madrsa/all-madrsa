  <!-- Firebase JS (same as ‡§™‡§π‡§≤‡•á ‡§µ‡§æ‡§≤‡§æ code) -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-app.js";
    import { getAuth, GoogleAuthProvider, signInWithPopup, setPersistence, browserLocalPersistence, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-auth.js";
    import { getDatabase, ref, push, onValue, remove } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyDMvkPqFKDjrMaLlBkercBYoLxEs1GEbng",
      authDomain: "all-madrsa.firebaseapp.com",
      databaseURL: "https://all-madrsa-default-rtdb.firebaseio.com",
      projectId: "all-madrsa",
      storageBucket: "all-madrsa.appspot.com",
      messagingSenderId: "619313835874",
      appId: "1:619313835874:web:e387e1297663f11fc2463b"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getDatabase(app);

    const membersList = document.getElementById("membersList");
    const loginBtn = document.getElementById("loginBtn");
    const logoutBtn = document.getElementById("logoutBtn");
    const formContainer = document.getElementById("formContainer");
    const addMemberForm = document.getElementById("addMemberForm");
    const welcomeMsg = document.getElementById("welcomeMsg");

    const adminEmails = ["zaradigitalseva@gmail.com"];
    let isAdmin = false;
    setPersistence(auth, browserLocalPersistence);

    function loadMembers() {
      const dbRef = ref(db, "members");
      onValue(dbRef, (snapshot) => {
        membersList.innerHTML = "";
        let count = 1;
        snapshot.forEach((child) => {
          const data = child.val();
          const deleteBtn = isAdmin ? `<button onclick="deleteMember('${child.key}')">Delete</button>` : ``;
          membersList.innerHTML += `
            <tr>
              <td>${count++}</td>
              <td>${data.name}</td>
              <td><img src="${data.photo}" width="60"/></td>
              <td>${data.address}</td>
              <td>${deleteBtn}</td>
            </tr>`;
        });
      });
    }
    loadMembers();

    addMemberForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      const name = document.getElementById("name").value;
      const address = document.getElementById("address").value;
      const photoFile = document.getElementById("photo").files[0];
      if (!photoFile) { alert("‚ö†Ô∏è Please select a photo"); return; }

      const formData = new FormData();
      formData.append("image", photoFile);
      const res = await fetch("https://api.imgbb.com/1/upload?key=d12c2e4a8650157b2b6b9fe85336ea43", { method: "POST", body: formData });
      const data = await res.json();
      if (!data.success) { alert("‚ùå Upload Failed"); return; }

      const photoUrl = data.data.url;
      push(ref(db, "members"), { name, address, photo: photoUrl });
      addMemberForm.reset();
      alert("‚úÖ Member Added!");
    });

    window.deleteMember = function (id) {
      if (isAdmin && confirm("Delete this member?")) {
        remove(ref(db, "members/" + id));
      }
    };

    onAuthStateChanged(auth, (user) => {
      if (user) {
        welcomeMsg.textContent = "Hi, " + user.displayName;
        logoutBtn.style.display = "inline-block";
        loginBtn.style.display = "none";
        if (adminEmails.includes(user.email)) { isAdmin = true; formContainer.style.display = "block"; }
        else { isAdmin = false; formContainer.style.display = "none"; }
      } else {
        welcomeMsg.textContent = "";
        logoutBtn.style.display = "none";
        loginBtn.style.display = "inline-block";
        isAdmin = false;
        formContainer.style.display = "none";
      }
      loadMembers();
    });

    loginBtn.addEventListener("click", () => {
      const provider = new GoogleAuthProvider();
      signInWithPopup(auth, provider).catch((error) => alert("Login Failed: " + error.message));
    });

    logoutBtn.addEventListener("click", () => {
      signOut(auth).catch((error) => alert("Logout Failed: " + error.message));
    });
  </script>
