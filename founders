    <!-- Add Member Form (Hidden until Admin Login) -->
    <div id="formContainer" style="display:none; margin-top:20px;">
      <h2>Add Member</h2>
      <form id="addMemberForm">
        <label for="name">Member Name</label>
        <input type="text" id="name" name="name" placeholder="Enter member name" required />

        <label for="address">Address</label>
        <input type="text" id="address" name="address" placeholder="Enter address" required />

        <label for="photo">Upload Photo</label>
        <input type="file" id="photo" name="photo" accept="image/*" required />

        <button type="submit" class="addBtn">Add Member</button>
      </form>
