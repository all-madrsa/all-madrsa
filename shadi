<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js";
import { getFirestore, collection, addDoc, onSnapshot, doc, updateDoc, query, orderBy, serverTimestamp } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore.js";
import { getAuth, signInAnonymously } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js";

// ‚úÖ Firebase config apna daalna
const firebaseConfig = {
  apiKey: "AIzaSyDMvkPqFKDjrMaLlBkercBYoLxEs1GEbng",
  authDomain: "all-madrsa.firebaseapp.com",
  projectId: "all-madrsa",
  storageBucket: "all-madrsa.appspot.com",
  messagingSenderId: "619313835874",
  appId: "1:619313835874:web:e387e1297663f11fc2463b"
};

const IMG_API_KEY = "d12c2e4a8650157b2b6b9fe85336ea43";

const app = initializeApp(firebaseConfig);
const db = getFirestore(app);
const auth = getAuth();
signInAnonymously(auth);

const addPostBtn=document.getElementById("addPostBtn"),
postPopup=document.getElementById("postPopup"),
closePost=document.getElementById("closePost"),
postForm=document.getElementById("postForm"),
postsList=document.getElementById("postsList"),
searchInput=document.getElementById("searchInput"),
profilePopup=document.getElementById("profilePopup"),
profileBody=document.getElementById("profileBody"),
closeProfile=document.getElementById("closeProfile"),
contactPopup=document.getElementById("contactPopup"),
contactForm=document.getElementById("contactForm"),
closeContact=document.getElementById("closeContact");

let allProfiles=[], selectedProfileId=null;

addPostBtn.onclick=()=>postPopup.style.display="flex";
closePost.onclick=()=>postPopup.style.display="none";
closeProfile.onclick=()=>profilePopup.style.display="none";
closeContact.onclick=()=>contactPopup.style.display="none";

postForm.onsubmit=async e=>{
  e.preventDefault();
  const formData=new FormData(postForm);
  const file=formData.get("photo");
  const imgData=new FormData();
  imgData.append("image",file);
  const res=await fetch(`https://api.imgbb.com/1/upload?key=${IMG_API_KEY}`,{method:"POST",body:imgData});
  const data=await res.json();
  await addDoc(collection(db,"profiles"),{
    name:formData.get("name"),
    age:formData.get("age"),
    gender:formData.get("gender"),
    marital:formData.get("marital"),
    city:formData.get("city"),
    education:formData.get("education"),
    occupation:formData.get("occupation"),
    diet:formData.get("diet"),
    photoUrl:data.data.url,
    created:serverTimestamp(),
    approvals:{
      name:true, age:true, marital:true, city:true,
      education:true, occupation:true, diet:true, photo:true
    }
  });
  postForm.reset();
  postPopup.style.display="none";
};

onSnapshot(query(collection(db,"profiles"),orderBy("created","desc")),snap=>{
  allProfiles=[];
  snap.forEach(d=>{let p=d.data();p.id=d.id;allProfiles.push(p);});
  renderProfiles();
});

function renderProfiles(){
  const search=searchInput.value.toLowerCase();
  postsList.innerHTML="";
  allProfiles.forEach(p=>{
    if(search && !(`${p.name} ${p.age} ${p.marital} ${p.city} ${p.education}`.toLowerCase().includes(search))) return;
    const card=document.createElement("div");
    card.className="profile-card bg-white rounded shadow p-2 flex flex-col items-center";
    card.innerHTML=`
      <img src="${p.photoUrl}" class="w-full h-32 object-cover rounded mb-1">
      <p class="font-bold">${p.name}</p>
      <p class="text-xs">${p.age} yrs</p>
      <button class="bg-green-500 text-white px-2 py-1 mt-1 rounded contactBtn">üì© Contact</button>
    `;
    card.onclick=e=>{
      if(!e.target.classList.contains("contactBtn")){
        profileBody.innerHTML=`
          <img src="${p.photoUrl}">
          <h2 class="text-xl font-bold mb-2">${p.name}</h2>
          <p><b>Age:</b> ${p.age}</p>
          <p><b>Marital:</b> ${p.marital}</p>
          <p><b>City:</b> ${p.city}</p>
          <p><b>Education:</b> ${p.education}</p>
          <p><b>Occupation:</b> ${p.occupation}</p>
          <p><b>Diet:</b> ${p.diet}</p>
        `;
        selectedProfileId=p.id;
        profilePopup.style.display="flex";
      }
    };
    card.querySelector(".contactBtn").onclick=e=>{
      e.stopPropagation();
      selectedProfileId=p.id;
      contactPopup.style.display="flex";
    };
    postsList.appendChild(card);
  });
}

contactForm.onsubmit=async e=>{
  e.preventDefault();
  const name=document.getElementById("contactName").value;
  const address=document.getElementById("contactAddress").value;
  const whatsapp=document.getElementById("contactWhatsApp").value;
  await addDoc(collection(db,"contacts"),{profileId:selectedProfileId,name,address,whatsapp,created:serverTimestamp()});
  contactForm.reset();
  contactPopup.style.display="none";
  alert("‚úÖ Contact request sent!");
};
</script>

</body>
