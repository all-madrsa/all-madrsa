<script>
const firebaseConfig = {
  apiKey: "AIzaSyDMvkPqFKDjrMaLlBkercBYoLxEs1GEbng",
  authDomain: "all-madrsa.firebaseapp.com",
  projectId: "all-madrsa",
  storageBucket: "all-madrsa.appspot.com",
  messagingSenderId: "619313835874",
  appId: "1:619313835874:web:e387e1297663f11fc2463b"
};
firebase.initializeApp(firebaseConfig);
const auth = firebase.auth();
const db = firebase.firestore();

const loginBtn = document.getElementById('loginBtn');
const logoutBtn = document.getElementById('logoutBtn');
const memberForm = document.getElementById('memberForm');
const adminLogs = document.getElementById('adminLogs');
const membersGrid = document.getElementById('members');

let currentUser=null;
const adminEmails=["zaradigitalseva@gmail.com"];

function googleLogin(){
  const provider = new firebase.auth.GoogleAuthProvider();
  auth.signInWithPopup(provider);
}

function logout(){ auth.signOut(); }

auth.onAuthStateChanged(user => {
  currentUser = user;
  if(user && adminEmails.includes(user.email)){
    loginBtn.style.display='none';
    logoutBtn.style.display='inline-flex';
    memberForm.style.display='block';
    adminLogs.style.display='block';
  } else if(user){
    loginBtn.style.display='none';
    logoutBtn.style.display='inline-flex';
    memberForm.style.display='none';
    adminLogs.style.display='none';
  } else {
    loginBtn.style.display='inline-flex';
    logoutBtn.style.display='none';
    memberForm.style.display='none';
    adminLogs.style.display='none';
  }
  loadMembers();
  loadContactLogs();
});

// Members
function loadMembers(){
  db.collection('members').get().then(snapshot=>{
    membersGrid.innerHTML='';
    snapshot.forEach(doc=>{
      const d = doc.data();
      const card = document.createElement('div');
      card.className='card';
      card.innerHTML=`
        <div class="img-wrapper"><img src="${d.photo || 'https://via.placeholder.com/300x300?text=Photo'}"></div>
        <div class="card-body">
          <h3>${d.name}</h3>
          <div class="meta">${d.city}, ${d.state}</div>
        </div>
        <div class="card-footer">
          ${currentUser && adminEmails.includes(currentUser.email)?`<button class="admin-small" onclick="editMember('${doc.id}')">Edit</button>`:''}
          ${currentUser && adminEmails.includes(currentUser.email)?`<button class="admin-del" onclick="deleteMember('${doc.id}')">Delete</button>`:''}
        </div>
      `;
      card.onclick=()=>showProfile(d, doc.id);
      membersGrid.appendChild(card);
    });
  });
}

// Edit/Delete
function saveMember(){ /* Add new member logic here */ alert('Profile saved!'); }
function editMember(id){ alert('Edit '+id); }
function deleteMember(id){ alert('Delete '+id); }

// Popup
function showProfile(data,id){
  document.getElementById('popImg').src=data.photo||'https://via.placeholder.com/400x400';
  document.getElementById('popName').innerText=data.name;
  document.getElementById('popBio').innerText=data.bio;
  document.getElementById('popAgeGender').innerText=data.age+' | '+data.gender;
  document.getElementById('popCityState').innerText=data.city+', '+data.state;
  document.getElementById('popEducation').innerText=data.education;
  document.getElementById('popProfessionIncome').innerText=data.profession+' | '+data.income;
  document.getElementById('popFamily').innerText=data.family;
  profilePopup.style.display='flex';
}
function closePopup(){ profilePopup.style.display='none'; }

// Connect
function showConnect(){ connectPopup.style.display='flex'; }
function closeConnect(){ connectPopup.style.display='none'; }
function sendWhatsApp(){
  const name=document.getElementById('visitorName').value;
  const city=document.getElementById('visitorCity').value;
  const phone=document.getElementById('visitorPhone').value;
  if(!name||!phone){ alert('Enter name and number'); return; }
  alert('WhatsApp message sent to admin (demo)');
}

// Contact logs
function loadContactLogs(){
  if(!currentUser||!adminEmails.includes(currentUser.email)) return;
  db.collection('contacts').get().then(snapshot=>{
    const body = document.getElementById('logsBody');
    body.innerHTML='';
    snapshot.forEach(doc=>{
      const d=doc.data();
      const row = document.createElement('tr');
      row.innerHTML=`<td>${d.profile}</td><td>${d.name}</td><td>${d.city}</td><td>${d.phone}</td><td>${d.time || ''}</td>`;
      body.appendChild(row);
    });
  });
}
